<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/md_grey_50"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_15sdp"
        android:layout_margin="@dimen/_14sdp"
        android:orientation="vertical"
        android:background="@drawable/border">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:paddingTop="@dimen/_25sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="बच्चों का नाम :"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"/>
            <EditText
              android:id="@+id/child_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/md_grey_900"
                android:inputType="text"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:orientation="horizontal"
            android:paddingTop="@dimen/_15sdp"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Health card हैं/नहीं:"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="@dimen/_122sdp"
                android:layout_height="@dimen/_35sdp"
                android:paddingLeft="@dimen/_50sdp"
                android:background="@color/md_grey_100">

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/choice_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/choice" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/step3_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="4"
            android:paddingTop="@dimen/_15sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="यदि हैं तोह नंबर :"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/child_health_card"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textColor="@color/md_grey_900"
                android:inputType="number"
                android:layout_weight="2"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="@dimen/_15sdp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="Status:"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="@dimen/_160sdp"
                android:layout_height="@dimen/_35sdp"
                android:paddingLeft="@dimen/_15sdp"
                android:background="@color/md_grey_100">

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/choice_spinner2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/status_type" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/save_button"
        android:layout_gravity="center_horizontal" />
</LinearLayout>